<GuiXml>
    <Controls>
        <TopLevelControl name="Sig_PerformanceMeter" movable="true" mouseEnabled="true" clampedToScreen="true" hidden="true" resizeToFitDescendents="true">
            <Dimensions x="200" y="70" />
            <ClampedToScreenInsets top="-20" bottom="20" left="-20" right="20" />
            <Anchor point="BOTTOMLEFT" />
            <Controls>
                <Backdrop name="$(parent)Backdrop" integralWrapping="true">
                    <AnchorFill />

                    <Edge file="EsoUI/Art/ChatWindow/chat_BG_edge.dds" edgeFileWidth="256" edgeFileHeight="256" edgeSize="32" />
                    <Center file="EsoUI/Art/ChatWindow/chat_BG_center.dds" />
                    <Insets left="32" top="32" right="-32" bottom="-32" />
                </Backdrop>
                <Label name="$(parent)FramerateLabel" font="ZoFontWinT2" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" horizontalAlignment="CENTER" verticalAlignment="CENTER">
                    <!-- <Anchor point="LEFT" /> -->
                    <OnMouseDown>
                        self:GetParent():StartMoving()
                    </OnMouseDown>
                    <OnMouseUp>
                        self:GetParent():StopMovingOrResizing()
                    </OnMouseUp>
                    <OnMouseEnter>
                        Sig_PerformanceMeter_OnMouseEnter(self)
                    </OnMouseEnter>
                    <OnMouseExit>
                        Sig_PerformanceMeter_OnMouseExit(self)
                    </OnMouseExit>
                </Label>
                <Label name="$(parent)LatencyLabel" font="ZoFontWinT2" horizontalAlignment="LEFT" verticalAlignment="CENTER">
                    <!-- <Anchor point="LEFT" relativeTo="$(parent)FramerateMeterLabel" relativePoint="RIGHT" offsetX="20" /> -->
                    <OnMouseDown>
                        self:GetParent():StartMoving()
                    </OnMouseDown>
                    <OnMouseUp>
                        self:GetParent():StopMovingOrResizing()
                    </OnMouseUp>
                    <OnMouseEnter>
                        Sig_PerformanceMeter_OnMouseEnter(self)
                    </OnMouseEnter>
                    <OnMouseExit>
                        Sig_PerformanceMeter_OnMouseExit(self)
                    </OnMouseExit>
                </Label>
                <Label name="$(parent)ClockLabel" font="ZoFontWinT2" horizontalAlignment="LEFT" verticalAlignment="CENTER">
                    <!-- <Anchor point="LEFT" relativeTo="$(parent)LatencyMeterLabel" relativePoint="RIGHT" offsetX="20" /> -->
                    <OnMouseDown>
                        self:GetParent():StartMoving()
                    </OnMouseDown>
                    <OnMouseUp>
                        self:GetParent():StopMovingOrResizing()
                    </OnMouseUp>
                    <OnMouseEnter>
                        Sig_PerformanceMeter_OnMouseEnter(self)
                    </OnMouseEnter>
                    <OnMouseExit>
                        Sig_PerformanceMeter_OnMouseExit(self)
                    </OnMouseExit>
                </Label>
            </Controls>

            <OnMoveStop>
                Sig_PerformanceMeter_OnMoveStop(self)
            </OnMoveStop>

            <OnInitialized>
                Sig_PerformanceMeter_OnInitialized(self)
            </OnInitialized>
        </TopLevelControl>
    </Controls>
</GuiXml>
